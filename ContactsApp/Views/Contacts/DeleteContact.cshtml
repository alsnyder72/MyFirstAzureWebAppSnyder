@model Contact
@{
ViewBag.Title = "Delete Contact"; }

<h2>Confirm Deletion</h2> 
<h3>@Model.Name (@Model.Phone)</h3>

<form asp-action="Delete" method="post"> <input type="hidden" asp-for="ContactId" />
<button type="submit" class="btn btn-primary">Delete</button> 

<a asp-controller="Contact" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>

